
doctype html
html(ng-app='clientApp')
    head
        title= title
        meta(name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
        link(rel='icon', href='images/tracker.png')
        link(rel='stylesheet', href='/lib/bootstrap/dist/css/bootstrap.min.css')
        link(rel='stylesheet', href='/lib/nvd3/build/nv.d3.min.css')
    body(ng-controller='TrackerController')
        div(style='width:100%; height:10vh; background-color: #aaa; padding-top:10px;')
            div
                input.form-control(type='number' ng-model='input.weight' style='width: 100px; float:left; margin-left:10px;')
                button.btn.btn-default(ng-click='submitInput()' style='float:left; margin-left:10px;') Submit
        div(ng-if='weights' style='width:100%; height:90vh; background-color: #aaa;')
            wb-tracker(x-weights='weights')

        script(src='lib/angular/angular.min.js')
        script(src='lib/angular-route/angular-route.min.js')
        script(src='lib/angular-resource/angular-resource.min.js')
        script(src='lib/underscore/underscore-min.js')
        script(src='lib/d3/d3.min.js')
        script(src='lib/nvd3/build/nv.d3.min.js')
        script(src='javascripts/app.js')
        script(src='javascripts/directives.js')